<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.WanderLogNew" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorSecondary">@color/main_blue</item>
    </style>

    <!-- App theme derived from the base theme -->
    <style name="Theme.WanderLogNew" parent="Base.Theme.WanderLogNew">
    </style>

    <style name="CustomBottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">30dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorSecondary">@color/main_blue</item>
        <item name="colorTertiary">@color/light_grey</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>
